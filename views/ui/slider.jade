extends ../core/base

block content
    #slider.muui-slider
        .viewport
            ul.overview
                each page in [1, 2, 3, 4, 5]
                    li.muui-slider-item(class="#{page === 1 && 'on' || ''}")
                        a(href="javascript:;")
                            img(alt="#{page}" src="/st/img/slider/#{page}.jpg")

block css
    :stylus
        #slider
            .viewport
                width: 580px
                &, .overview
                    height: 200px
            .muui-slider-item
                &, img
                    float: left
                    display: inline

block js
    :coffee
        require [
            'muui/slider/index'
        ], (Slider) ->
            new Slider()
