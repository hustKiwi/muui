extends core/base

mixin list(items)
    each item, i in items
        li(class="#{i % 2 && 'even' || ''}")
            a(href="#{item.url}") #{item.name}

block content
    #ui-nav
        .mod
            .hd
                h2 PC端组件
            .bd
                ul
                    +list([
                        {
                            url: '/tab',
                            name: 'Tab - 标签切换'
                        },
                        {
                            url: '/pager',
                            name: 'Pager - 翻页器'
                        },
                        {
                            url: '/slider',
                            name: 'Slider - 页面滑动 / 滑动头图'
                        },
                        {
                            url: '/modal',
                            name: 'Modal - 弹窗'
                        },
                        {
                            url: '/tooltip',
                            name: 'Tooltip - 工具提示'
                        },
                        {
                            url: '/button',
                            name: 'Button - 按钮'
                        }
                    ])
        .mod
            .hd
                h2 WebApp端组件
            .bd
                ul
                    +list([
                        {
                            url: '/webapp_tab',
                            name: 'Tab - 标签切换'
                        }
                    ])
