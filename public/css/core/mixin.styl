line-height($height)
    height: $height
    line-height: $height

title($font = 16px, $color = $black)
    color: $color
    font-size: $font
    font-weight: bold

center-block($width = $$page_width)
    display: block
    margin-left: auto
    margin-right: auto
    if $width
        width: $width

float-left()
    float: left
    display: inline

float-right()
    float: right
    display: inline
