.muui-modal
    fixed(top 50% left 50%)
    _position: absolute
    zoom: 1
    display: none
    z-index: 1001
    background: $lighter_grey
    overflow: hidden
    padding: 5px !important
    .muui-modal-header, .muui-modal-body, .muui-modal-footer
        min-width(350px)
        padding: 0 20px
        background: $white
    .muui-modal-header
        relative()
        padding-top: 15px
        h3
            title(14px)
        .close
            size(17px)
            hide-text()
            absolute(top 15px right 15px)
            cursor: pointer
            background: transparent url('/st/ui/modal/cross.png') no-repeat 3px 3px
    .muui-modal-body
        padding: 15px 20px
    .muui-modal-footer
        text-align: center
        padding-bottom: 25px
        .submit
            margin-right: 10px

.muui-modal-backdrop
    opacity(.6)
    fixed(top 0 left 0)
    width: 100% !important
    height: 100% !important
    _position: absolute
    z-index: 1000
    background: $white
