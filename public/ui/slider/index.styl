$slider_arrows_weight = 30px
$slider_arrows_height = 100px

muui-slider-ctrl-bg()
    absolute(top left bottom right)
    opacity: .5
    width: 100%
    content: ''
    z-index: 1
    background: $black

.muui-slider
    relative()
    inline-block()
    padding: 0 ($slider_arrows_weight / 2)
    .viewport
        relative()
        overflow: hidden
    .overview
        absolute(top 0)
    .muui-slider-item
        &, img
            float-left()
    .bullets
        absolute(right 25px bottom 10px)
        padding: 5px 0
        overflow: hidden
        .bullet
            size(6px)
            relative()
            hide-text()
            float-left()
            border-radius: 5px
            transition: width, .5s, ease-out
            z-index: 2
            margin: 0 3px
            cursor: pointer
            background: $light_grey
            &.active
                background: $light_blue
                width: 15px
        &:after
            muui-slider-ctrl-bg()
            border-radius: 5px
    .arrow
        hide-text()
        absolute(top 50%)
        size($slider_arrows_weight, $slider_arrows_height)
        margin-top: - ($slider_arrows_height / 2)
        display: none
        cursor: pointer
        &.prev
            margin-left: -10px
        &.next
            right: 0
            margin-left: -10px
            &:before
                background: url('/st/ui/slider/arrow_right.png') no-repeat
        &.on
            &:before
                opacity: 1
        &:after
            muui-slider-ctrl-bg()
            border-radius: 4px
        &:before
            inline-block()
            size(13px, 21px)
            absolute(left 50% top 50%)
            opacity: .5
            margin-left: -6.5px
            margin-top: -10.5px
            z-index: 2
            content: ''
            background: url('/st/ui/slider/arrow_left.png') no-repeat
